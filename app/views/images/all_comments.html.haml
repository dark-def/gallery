.container_events
  -#%h1
    = @user.name
    %small
      = @user.email
      -if !@user.provider.blank?
        = @user.provider
      = '|'
      = "Member since #{@user.created_at.strftime('%d/%m/%Y')}"
    -#= (post.created_at.strftime('%d_%m_%Y'), post)

  -@comments.each do |comment|
    .d0
      .d1
        %b= comment.id
      .d1
        = comment.description
      .d2
        = comment.user.name
      .d1
        = image_tag comment.image.image.url(:thumb), :width => 50
      .d1
        = comment.created_at