.container_img
  .img_show
    = image_tag @image.image, :height => 400, :width => 400

  .like_block
    %i.icon-thumbs-up-alt.icon-2x
    -#%i.icon-thumbs-up

  .comment-form
    .comments
      - if !@comments.blank?
        -@comments.each do |comment|
          %blockquote
            .comment_name
              -@user.each do |user|
                -if user.id == comment.user_id
                  = user.name
              %small.comment_time
                = time_ago_in_words comment.created_at
                = 'ago'
            .comment_discription
              = comment.description.capitalize

      -else
        = 'No one commented this boobs yet'
    -if user_signed_in?
      = form_for [@image, Comment.new], :remote => true, :html => {:class => 'form-inline'} do |f|
        .input-append
          = f.text_field :description, :placeholder => 'Comment'
          = f.submit 'Add comment', class: 'btn btn-primary ', id: 'comment-button'
    -else
      = 'You need'
      = link_to ' sign in ', new_user_session_path
      = 'before left comments'
      %br
      = 'or you can use your '
      = link_to 'facebook', '/auth/facebook'
      = 'accaunt'

    .pagination
      = paginate @comments